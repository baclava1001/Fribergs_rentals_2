<div>
    @{
        var currentUser = Helpers.RetrieveUserFromCookie(HttpContext.Session);
    }
    @if (currentUser is Administrator)
    {
        <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a>
        <a asp-page="./Index">Back to List</a>
    }
</div>

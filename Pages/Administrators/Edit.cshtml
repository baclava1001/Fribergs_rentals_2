@page
@model Fribergs_rentals_2.Pages.Administrators.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Ändra personaluppgifter</h1>

<h4>@Model.Administrator.FirstName @Model.Administrator.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Administrator.AdministratorId" />
            <div class="form-group">
                <label asp-for="Administrator.FirstName" class="control-label"></label>
                <input asp-for="Administrator.FirstName" class="form-control" />
                <span asp-validation-for="Administrator.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.LastName" class="control-label"></label>
                <input asp-for="Administrator.LastName" class="form-control" />
                <span asp-validation-for="Administrator.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.BirthDate" class="control-label"></label>
                <input asp-for="Administrator.BirthDate" class="form-control" />
                <span asp-validation-for="Administrator.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.Address" class="control-label"></label>
                <input asp-for="Administrator.Address" class="form-control" />
                <span asp-validation-for="Administrator.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.Email" class="control-label"></label>
                <input asp-for="Administrator.Email" class="form-control" />
                <span asp-validation-for="Administrator.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.PhoneNumber" class="control-label"></label>
                <input asp-for="Administrator.PhoneNumber" class="form-control" />
                <span asp-validation-for="Administrator.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Administrator.Password" class="control-label"></label>
                <input asp-for="Administrator.Password" class="form-control" />
                <span asp-validation-for="Administrator.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="normalbutton" /> | <a asp-page="./Index">Tillbaka till lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

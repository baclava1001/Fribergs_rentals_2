@page
@model Fribergs_rentals_2.Pages.Administrators.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Administratörer</h1>

<p>
    <a asp-page="Create">
        <button class="normalbutton">Lägg till ny</button>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator[0].Password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Administrator) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AdministratorId">Ändra</a> |
                <a asp-page="./Details" asp-route-id="@item.AdministratorId">Detaljer</a> |
                <a asp-page="./Delete" asp-route-id="@item.AdministratorId">Radera</a>
            </td>
        </tr>
}
    </tbody>
</table>

@using Models
@using Fribergs_rentals_2

@{
    // Load different page layouts depending on if the user is an administrator or not
    // GetUserRole() is a static helper method
    if (Helpers.GetUserRole(Context.Session) is Administrator)
    {
        Layout = "_Layout_Admin";
    }
    else // If Customer or not logged in, show standard layout
    {
        Layout = "_Layout";
    }
}
